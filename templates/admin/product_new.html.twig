{% extends 'base.html.twig' %}

{% block title %}Panneau d'administration{% endblock %}
{% block body %}
    <div class="container-fluid catalogue">
        <div class="row">
            <div class="col-3 title-admin">
                <ul>
                    <a href="{{ path('admin_index') }}"><li class='d-flex align-items-center'><i class="fas fa-history"></i> Tableau de Bord</li></a>
                    <a href="{{ path('admin_new_product') }}"><li class='active d-flex align-items-center'><i class="fas fa-baby-carriage"></i> Equipements</li></a>
                    <a href="{{ path('admin_new_accessory') }}"><li class='d-flex align-items-center'><i class="fas fa-umbrella"></i> Accessoires</li></a>
                    <a href=""><li class='d-flex align-items-center'><i class="fas fa-box-open"></i> Stocks</li></a>
                    <a href=""><li class='d-flex align-items-center'><i class="far fa-calendar-check"></i> Locations</li></a>
                    <a href=""><li class='d-flex align-items-center'><i class="far fa-calendar-alt"></i> Calendrier</li></a>
                    <a href=""><li class='d-flex align-items-center'><i class="fas fa-user-lock"></i> Utilisateurs</li></a>
                    <a href=""><li class='d-flex align-items-center'><i class="fas fa-chart-area"></i> Analytics</li></a>
                </ul>
            </div>
            <div class="col-9">
                <div class="row  ">
                    <div class="container col-10 d-md-flex mt-5 mb-5">
                        <div class="col-sm justify-content-md-start">
                            <div class="w-50%">
                                <img class="img-fluid" src="{{ asset('build/AdobeStock_257633369.png') }}" alt="">
                            </div>
                        </div>
                        <div class="col-sm justify-content-md-start border  border-dark rounded p-3">
                            <div class="container col-sm mt-3 text-center ">
                                <h1> Ajouter un produit</h1>
                                {{ form_start(form) }}
                                <div class="col-sm mb-3 ">
                                    <label for="">Nom du produit</label>
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="col-sm mb-3 ">
                                    <label for="">Marque</label>
                                    {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.marque) }}
                                </div>
                                <div class="col-sm mb-3">
                                    <label for="">Accessoire(s) associ√©</label>
                                    {{ form_widget(form.accessories, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-sm mb-3 ">
                                    <label for="">Description</label>
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-sm mb-3 ">
                                    <label for="">Characteristiques</label>
                                    {{ form_widget(form.characteristic, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="col-sm-4 mb-3 ">
                                        <label for="">Argument 1</label>
                                        {{ form_widget(form.argumentOne, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-sm-4 mb-3 ">
                                        <label for="">Argument 2</label>
                                        {{ form_widget(form.argumentTwo, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-sm-4 mb-3 ">
                                        <label for="">Argument 3</label>
                                        {{ form_widget(form.argumentThree, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="col-sm-6 mb-3 ">
                                        <label for="">Tarif par jour</label>
                                        {{ form_widget(form.pricePerDay, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 ">
                                        <label for="">Tarif service</label>
                                        {{ form_widget(form.priceService, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-sm mb-3 ">
                                    <label for="">Images</label>
                                    {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-sm">
                                    <button type="submit" class="btn button-style">Ajouter</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-auto my-5 text-center">
            <a href="{{ path("home") }}"><button class="btn button-style col-3"> Retour sur la page d'accueil </button></a>
        </div>
    </div>


{% endblock %}