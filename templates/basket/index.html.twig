{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.pseudo }}{% endblock %}

{% block body %}

    <div class="container justify-content-center text-center py-5 basket-information">
        <div class="d-flex justify-content-center">
            <h1>Location</h1>
        </div>
        {% for product in basket.itemProducts %}
            <div class=" container-fluid bg-primary ">

            </div>
        {% endfor %}
        <h2>Mon panier</h2>
            <div class="basket d-flex flex-wrap center col-md-9 mx-auto py-5">
                    {% for products in basket.ItemProducts %}
                        <div class="mx-auto  py-3">
                        {% for image in products.product.images %}
                            {% if loop.index0 == 0 %}
                                <div class="d-flex justify-content-around w-100">
                                    <div class="d-flex">
                                        <p>Livraison et remise <br> Bordeaux - détails à la prochaine étape</p>
                                        <p>OFFERTE</p>
                                    </div>
                                </div>
                                <div></div>
                                <a href="{{ path('product_show', {id: products.product.id}) }}">
                                    <div class="card-basket d-flex justify-content-between mx-2">
                                        <div>
                                            <img src="{{ image.url }}" alt="image du produit" class="img-fluid">
                                        </div>
                                        <div class="flex-fill d-flex flex-column justify-content-center">
                                            <strong>{{ products.product.name }}</strong>
                                            <p class="quantity">x{{ products.quantity }}</p>
                                            <p class="price">{{ products.product.pricePerDay }}€/jour</p>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        {% endfor %}
                        </div>
                    {% endfor %}
            </div>
    </div>
    <div class="mx-auto my-5 text-center">
        <a href="{{ path('rent_new') }}"><button class="btn button-style col-1">Louer</button></a>
    </div>
{% endblock %}
