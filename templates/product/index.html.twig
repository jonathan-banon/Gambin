{% extends 'base.html.twig' %}

{% block title %}Catalogue produits!{% endblock %}
{% block body %}
    <div class="container-fluid catalogue">
        <div class="row nav-catalogue">
            <div class="col-12">
                <div class=" text-dark col-12 text-center mx-auto py-3 ">
                    <a class='current' href="{{ path('product_index') }}">EQUIPEMENTS</a>
                    <a href="{{ path('accessory_index') }}" class="mx-5">ACCESSOIRES</a>
                    <a href="#">PACKS</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-12 filter-part">
                <a href="{{ path('home') }}"> Accueil </a> > <strong>Catalogue </strong></p>
                <strong> Vous partez d'ou ?</strong>
                <form>
                    <div class="form-group">
                        <label>Destination</label>
                        <input type="text" class="form-control" id="city-catalogue">
                    </div>
                </form>

                <strong> Vous partez quand ?</strong>
                <form>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Début</label>
                                <input type="date" class="form-control" id="start-rent">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Fin</label>
                                <input type="date" class="form-control" id="start-rent">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-8 col-12">
                <div class="container-fluid list-catalogue">
                    <div class="row d-flex justify-content-center">
                        {% for product in products %}
                            <a href="{{ path("product_show", {slug: product.slug}) }}" class="card col-md-4 col-lg-3 col-12">
                                <div class="card-block">
                                    {% if product.getFirstPicture %}
                                        <img class="card-img-top img-fluid" src="{{ product.getFirstPicture.url }}" alt="Card image cap">
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ product.name }}</h5>
                                        <p class="card-text">A partir de {{ product.pricePerDay }} €</p>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-auto my-5 text-center">
            <a href="{{ path("home") }}"><button class="btn button-style col-3"> Retour sur la page d'accueil </button></a>
        </div>
    </div>


{% endblock %}
