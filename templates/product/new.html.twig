{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="row  ">
        <div class="container col-10 d-md-flex mt-5 mb-5">
            <div class="col-sm justify-content-md-start">
                <div class="w-50%">
                    <img class="img-fluid" src="{{ asset('build/AdobeStock_257633369.png') }}" alt="">
                </div>
            </div>
            <div class="col-sm justify-content-md-start border  border-dark rounded p-3">
                <div class="container col-sm mt-3 text-center ">
                    <h1> Ajouter un produit</h1>
                    {{ form_start(form) }}
                    <div class="col-sm mb-3 ">
                        <label for="">Nom du produit</label>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="col-sm mb-3 ">
                        <label for="">Marque</label>
                        {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.marque) }}
                    </div>
                    <div class="col-sm mb-3">
                        <label for="">Accessoire(s) associ√©</label>
                        {{ form_widget(form.accessories, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm mb-3 ">
                        <label for="">Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm mb-3 ">
                        <label for="">Characteristiques</label>
                        {{ form_widget(form.characteristic, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="col-sm-4 mb-3 ">
                            <label for="">Argument 1</label>
                            {{ form_widget(form.argumentOne, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-4 mb-3 ">
                            <label for="">Argument 2</label>
                            {{ form_widget(form.argumentTwo, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-4 mb-3 ">
                            <label for="">Argument 3</label>
                            {{ form_widget(form.argumentThree, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="col-sm-6 mb-3 ">
                            <label for="">Tarif par jour</label>
                            {{ form_widget(form.pricePerDay, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-6 mb-3 ">
                            <label for="">Tarif service</label>
                            {{ form_widget(form.priceService, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-sm mb-3 ">
                        <label for="">Images</label>
                        {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm">
                        <button type="submit" class="btn button-style">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
