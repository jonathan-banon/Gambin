{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Création d'un nouveau produit{% endblock %}

{% block body %}
    <div class="row">
        <div class="container col-10 d-md-flex mt-5 mb-5">
            <div class="col-sm justify-content-md-start">
                <div class="w-50%">
                    <img class="fluid" src="{{ asset('build/AdobeStock_257633369.png') }}" alt="">
                </div>
            </div>
            <div class="col-sm justify-content-md-start border border-dark rounded p-3">
                <div class="container col-sm mt-3  ">
                    <h1 class="text-center"> Ajouter un nouveau produit</h1>
                    <div class="col-10 mx-auto">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="">Créer ce produit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}