{% extends 'base.html.twig' %}
{% block title %}Informations - {{ app.user.pseudo }}{% endblock %}

{% block body %}
    <div class=" text-center align-middle mt-5">
        <h1 class="mt-5"> Votre Facture  </h1>
        {{ dump(basket) }}



        {% for rent in rents %}
        <div class="location">
            <div class="d-flex justify-content-between">
                <div>
                    <h3>Location du {{ rent.dateIn|date("d/m/Y") }} au {{ rent.dateOut|date("d/m/Y") }}</h3>
                    <h4>Status : {{ rent.status.name }}</h4>
                </div>
                <div>
                    <h4>Nombre d'article : {{ rent.getQuantity }}</h4>
                    <strong>Prix : {{ price.calculation(rent) }}€ pour {{ rent.countDays }} jours</strong>
                </div>
            </div>
            <div class="row">
                {% for products in rent.getItemProducts %}
                    <div class="col-12 col-lg-5">
                        <a href="{{ path('product_show', {id: products.product.id}) }}">
                            <div class="card-rent d-flex justify-content-between">
                                {% if products.product.getFirstPicture is not null %}
                                    <div>
                                        <img src="{{ products.product.getFirstPicture.url }}" alt="image du produit" class="img-fluid">
                                    </div>
                                {% endif %}
                                <div class="flex-fill d-flex flex-column justify-content-center">
                                    <strong>{{ products.product.name }}</strong>
                                    <p class="quantity">x{{ products.quantity }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}

                {% endfor %}



        <img src="" alt="">
    </div>
<div class="container ">
    <div class="row justify-content-md-center">
        <div class="col-10 ">
            <hr>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Code parainage</label>
                </div>
            <hr>
            <div class="d-flex justify-content-between">
                <div>
                    <h4> Caution </h4>
                    <p class="col-md-10 text-break mr-md-3 text-muted" > Un chèque de caution vous sera demandé lors de la livraison des équipements.
                        <br>
                        Pas de panique, nous vous le rendrons à la restitution.  </p>
                </div>
                <div class="col-md-2 ">
                    <p ><strong class="text-end">100€</strong></p>
                </div>
            </div>
            <hr>
            <div class="container d-flex ">
                <div class="col-6 mr-3">

                </div>
               <div class="col-6">
                   <div class="d-flex justify-content-between">
                       <p class="text-muted"> Sous total : </p>
                       <p class="text-end"><strong> 100€</strong></p>
                   </div>
                   <div class="d-flex justify-content-between">
                       <p class="text-muted"> Réduction longue durée : </p>
                       <p class="text-end text-success"><strong> 29€</strong></p>
                   </div>
                   <div class="d-flex justify-content-between">
                       <p class="text-muted"> Frais d’entretien :  </p>
                       <p class="text-end"><strong> Inclut</strong></p>
                   </div>
                   <div class="d-flex justify-content-between">
                       <p class="text-muted"> Livraison :   </p>
                       <p class="text-end"><strong> Offerte</strong></p>
                   </div>
                   <div class="d-flex justify-content-between">
                       <h3> <strong>Total :  </strong> </h3>
                       <h3 class="text-end"><strong> 100€</strong></h3>
                   </div>
               </div>
            </div>
            <div class="col text-center mt-5 ">
                <a href="{{ path('rent_sucess') }}"> <i type="" class="btn button-style align-content-end w-50 ">Terminer la location </i> </a>
            </div>
        </div>
    </div>
</div>


{% endblock %}
