{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.pseudo }}{% endblock %}

{% block body %}
    <h1>Paramètre du compte</h1>
    <div class="container justify-content-center alert-information">
        <h2>Alertes disponibilité</h2>
        <h3>suivre mes alertes</h3>
        <div class="py-4">
            <strong>Recevez un mail dès que votre produit favories est de nouveau disponible !</strong>
                {% for favorite in app.user.favorites %}
                    <div class="col-12 col-lg-5 py-3">
                        <div class="card-rent d-flex justify-content-between">
                            {% for image in favorite.images %}
                                {% if loop.index0 == 0 %}
                                    <img class="img-fluid" src="{{ image.url }}" alt="Card image cap">
                                {% endif %}
                            {% endfor %}
                            <div class="flex-fill d-flex flex-column justify-content-center">
                                <strong>{{ favorite.name }}</strong>
                            </div>
                            <div class="flex-fill d-flex flex-column justify-content-center">
                                <label class="switch mx-auto">
                                    <input type="checkbox" checked>
                                    <span class="slider round"></span>
                                </label>
                            </div>
                            <div class="flex-fill d-flex flex-column justify-content-center">
                                <a href=""><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <h3>Vous n'avez encore aucun produits en favoris</h3>
                {% endfor %}
        </div>
    </div>
    <div class="mx-auto my-5 text-center">
        <a href="{{ path('user_index') }}"><button class="btn button-decoration"><i class="fas fa-arrow-circle-left"></i>  Revenir à mon Compte</button></a>
    </div>
{% endblock %}
